@{
    ViewBag.Title = "Home Page";
}


<div class="row">
    @(Html.Kendo().Chart()
    .Name("AgePie")
    .Title(x => x.Text("Age Debt (Inv date)").Position(ChartTitlePosition.Bottom))
    .Legend(l => l.Visible(false))
                    .Series(s => s.Pie(new dynamic[] {
                         new {category="Current",value=53000,color="#9de219"},
                         new {category="0-30",value=16000,color="#90cc38"},
                         new {category="31-60",value=11000,color="#068c35"},
                         new {category="61-90",value=9600,color="#006634"},
                         new {category="90+",value=5000,color="#004d38"}
                    }).Labels(label => label.Template("#= category #: \n #= value#%")
                       .Background("transparent")
                       .Visible(false)
                    ).StartAngle(150)).Tooltip(t=>t.Visible(true)))

</div>